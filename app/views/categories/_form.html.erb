<div class="col-lg-3">
	<%= form_for @category do |f| %>
		<fieldset>
			<div class="form-group">
				<div class="col-lg-9">
					<%= f.text_field :name, placeholder: 'Category', class: "form-control" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-lg-3">
					<%= f.submit "Add", class: "btn btn-success" %>
				</div>
			</div>
		</fieldset>
	<% end %>
</div>