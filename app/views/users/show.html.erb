<div class="page-header">
	<h1><%= @user.username %></h1>
	<%= link_to "Add Video", new_video_path, :class => "btn btn-success" %>
</div>

<div class="row">
	<div class="col-lg-12">	
		<p class="lead">Balance: <span class="text-success"><%= number_to_currency(@user.account.balance) %></span></p> 

		<%= form_tag money_user_path do |f| %> 
			<%= submit_tag "Get money", :class => "btn btn-success btn-lg" %>
		<% end %>
	</div>
</div>


<div class="page-header">
	<h3>Videos (<%= @purchased_videos_count %>)</h3>
</div>

<% @purchased_videos.in_groups_of(3, false) do |videos| %>
	<div class="row">
		<%= render videos %>
	</div>
<% end %>

<div class="page-header">
	<h3>My videos (<%= @videos_count %>)</h3>
</div>

<% @videos.in_groups_of(3, false) do |videos| %>
	<div class="row">
		<%= render videos %>
	</div>
<% end %>