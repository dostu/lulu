<h1>Sign Up</h1>

<%= form_for @user do |f| %>

	<p>
		<%= f.label :username %><br />
		<%= f.text_field :username %>
	</p>

	<p>
		<%= f.label :password %><br />
		<%= f.password_field :password %><br />
	</p>

	<p>
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %>
	</p>

	<p><%= f.submit :class => "btn btn-primary" %></p>

<% end %>