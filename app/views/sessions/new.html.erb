<div class="page-header">
	<h1>Login</h1>
</div>

<div class="row">
	<div class="col-lg-6">
		<div class="well">
			<%= form_tag sessions_path, {:class => "form-horizontal"} do %>
				<fieldset>
					<div class="form-group">
						<%= label_tag :username, nil, class: "col-lg-3 control-label" %>
						<div class="col-lg-9">
							<%= text_field_tag :username, nil, class: "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<%= label_tag :password, nil, :class => "col-lg-3 control-label" %>
						<div class="col-lg-9">
							<%= password_field_tag :password, nil, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-lg-9 col-lg-offset-3">
							<%= link_to "Cancel", root_path, :class => "btn btn-default" %>
							<%= submit_tag "Login", :class => "btn btn-primary" %>
						</div>
					</div>
				</fieldset>
			<% end %>
		</div>
	</div>
</div>